<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White"
    tools:context="com.example.admin.firebasedemo.Logged_Activity">

    <TextView
        android:layout_gravity="center"
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="16dp"
        android:textColor="@color/Orange"/>

    <TextView
        android:layout_gravity="center"
        android:id="@+id/Email_logged"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:text="Email"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="60dp"
        android:textColor="@color/Orange"/>
    <Button
        android:background="@color/buttoncolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="browser_onclick"
        android:text="Choose image to upload"/>
    <ImageView
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:id="@+id/imageView"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtImageName"
        android:textColor="@color/black"/>
    <Button
        android:background="@color/buttoncolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:onClick="Upload_onclick"
        android:layout_marginBottom="5dp"/>
    <Button
        android:background="@color/buttoncolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Image Uploaded"
        android:onClick="showimg_onclick"/>
</LinearLayout>
